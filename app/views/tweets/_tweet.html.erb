<% @tweets.each do |tweet|%>
    <div class="card">
      <div class="card-image">
        <%= link_to image_tag(tweet.image), tweet_path(tweet.id) if tweet.image.attached? %>
      </div>
      <p class="card-summary"> 
      <%= tweet.message %>
      </p>
        <ul class="tag">
          <li class="tag-list">
            <% tweet.tags.each do |tag| %>
              #<%=tag.name%>
            <%end%>
          </li>
        </ul>
    </div>
<%end%>